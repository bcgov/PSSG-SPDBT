{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "System.Net.Http.HttpClient": "Warning",
                "Microsoft.OData.Extensions.Client": "Warning"
            }
        }
    },
    "Payments": {
        "ApplicantPortalPaymentSuccessPath": "security-screening/payment-success/",
        "ApplicantPortalPaymentFailPath": "security-screening/payment-fail/",
        "ApplicantPortalPaymentCancelPath": "security-screening/crc-list",
        "ApplicantPortalPaymentErrorPath": "security-screening/payment-error/",
        "OrgPortalPaymentSuccessPath": "crrp/payment-success/",
        "OrgPortalPaymentFailPath": "crrp/payment-fail/",
        "OrgPortalPaymentCancelPath": "crrp/payments",
        "OrgPortalPaymentErrorPath": "crrp/payment-error/",
        "CrrpaPaymentSuccessPath": "crrpa/payment-success/",
        "CrrpaPaymentFailPath": "crrpa/payment-fail/",
        "CrrpaPaymentCancelPath": "crrpa/payment-fail",
        "CrrpaPaymentErrorPath": "crrpa/payment-error/",
        "MaxOnlinePaymentFailedTimes": 3
    },
    "UploadFile": {
        "StreamFileFolder": "/tmp",
        "MaxFileSizeMB": 25,
        "AllowedExtensions": ".docx,.doc,.bmp,.jpeg,.jpg,.tif,.tiff,.png,.gif,.pdf,.html,.htm",
        "MaxAllowedNumberOfFiles": 10
    },
    "PayBcSearchInvoiceUrl": "https://paydev.gov.bc.ca/public/searchInvoice", //only used for displaying
    "dynamics": {
        "AuthenticationSettings": {
            "oAuth2TokenRequestTimeoutInMilliSeconds": 2000,
            "oAuth2TokenRequestMaxRetryTimes": 10,
            "oAuth2TokenCachedInMins": 30
        }
    }
}