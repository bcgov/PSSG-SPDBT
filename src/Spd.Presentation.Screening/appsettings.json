{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft ": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient": "Warning",
        "Microsoft.OData.Extensions.Client": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "*", // Semicolon separated list. e.g. "https://example.com;http://www.contoso.com",
  "HostUrl": "https://spd-screening-portal-dev.apps.emerald.devops.gov.bc.ca/",
  "Payments": {
    "ApplicantPortalPaymentSuccessPath": "security-screening/payment-success/",
    "ApplicantPortalPaymentFailPath": "security-screening/payment-fail/",
    "ApplicantPortalPaymentCancelPath": "security-screening/crc-list",
    "ApplicantPortalPaymentErrorPath": "security-screening/payment-error/",
    "OrgPortalPaymentSuccessPath": "crrp/payment-success/",
    "OrgPortalPaymentFailPath": "crrp/payment-fail/",
    "OrgPortalPaymentCancelPath": "crrp/payments",
    "OrgPortalPaymentErrorPath": "crrp/payment-error/",
    "CrcaPaymentSuccessPath": "crca/payment-success/",
    "CrcaPaymentFailPath": "crca/payment-fail/",
    "CrcaPaymentCancelPath": "crca/payments",
    "CrcaPaymentErrorPath": "crca/payment-error/",
    "MaxOnlinePaymentFailedTimes": 30
  },
  "KEY_RING_PATH": ".",
  "UploadFile": {
    "StreamFileFolder": "/tmp",
    "MaxFileSizeMB": 25,
    "AllowedExtentions": ".docx,.doc,.bmp,.jpeg,.jpg,.tif,.tiff,.png,.gif,.pdf,.html,.htm",
    "MaxAllowedFileNumbers": 10
  }
}
